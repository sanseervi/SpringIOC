<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN 2.0//EN" "http://www.springframework.org/dtd/spring-beans-2.0.dtd">

<beans>
<bean id="triangle" class="com.jspiders.pkg1.Triangle">
<property name="point1" ref="first"></property>
<property name="point2" ref="second"></property>
<property name="point3" ref="third"></property>
</bean>

<bean id="first" class="com.jspiders.pkg1.Point">
<property name="x" value="0"></property>
<property name="y" value="0"></property>
</bean>

<bean id="second" class="com.jspiders.pkg1.Point">
<property name="x" value="0"></property>
<property name="y" value="10"></property>
</bean>

<bean id="third" class="com.jspiders.pkg1.Point">
<property name="x" value="10"></property>
<property name="y" value="0"></property>
</bean>

</beans>